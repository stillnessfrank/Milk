        }

        .bwizard-steps li.active, .bwizard-steps li.active:focus, .bwizard-steps li.active:hover {
            background: #ff5b57 !important;
        }

        .form-control-feedback {
            right: -26px;
            margin-right: 10px;
            color: #ff3245;
        }

        .control-label {
            text-align: left !important;
        }
        /*#tankuang .row .panel-body{*/
        /*background:rgba(255,255,255,0.5)!important;*/
        /*}*/
    </style>
}

@section scripts{
    <script src="~/theme/assets/js/apps.min.js"></script>
    <script src="~/Scripts/underscore-min.js"></script>
    <script src="~/js/main.js"></script>
    <script>
        var userService = abp.services.app.user;
        $(document).ready(function() {
            $("#global_search").hide();
            App.init();
            $('.sidebar-minify-btn').click().hide();
            FormWizard.init();
            //FormWizard1.init();
            $('.well').height($('body').height() * 0.6).css("overflow", "auto");
            $(window).resize(function() { //当浏览器大小变化时
                $('.well').height($('body').height() * 0.5).css("overflow", "auto");
            });
            FormPlugins.init();

            var $form = $("#form-user");

            $form.validate();

            $("button[type=submit]").off().on("click",
                function(e) {
                    e.preventDefault();
                    console.log(userService);
                    if (!$form.valid()) {
                        return;
                    }
                    var user = $form.serializeFormToObject();
                    abp.ui.setBusy($("body"));
                    userService.createUser(user).done(function () {
                        abp.message.success('新建用户成功！', '操作成功');
                        $("input[type=text],input[type=password]").val("");
                    }).always(function() {
                        abp.ui.clearBusy($("body"));
                    });
                });
        });
</script>
}
